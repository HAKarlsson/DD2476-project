{
  "template": {
    "size": 100,
    "sort": [
      {
        "day": "desc"
      },
      {
        "serpId": "asc"
      }
    ],
    "query": {
      "bool": {
        "must": [
          {
            "match": {
              "user": "{{user}}"
            }
          },
          {
            "range": {
              "day": {
                "lt": "{{day1}}",
                "gte": "{{day2}}"
              }
            }
          }, 
          {
            "match": {
              "query": {
                "query": "{{query}}",
                "operator" : "or"
              }
            }
          }
        ]
      }
    }
  }
}
